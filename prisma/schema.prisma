generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  password  String
}

model Recipe {
  id        String   @id @default(cuid())
  creator     String   
  status  String
  name  String
  recipe  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Runner {
  id        String   @id @default(cuid())
  name       String
  address     String @unique
  creator  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}